extends layout

block content
    link(rel='stylesheet', href='/stylesheets/search.css')
    h2= title
    #mainContent
        #bigSearch
            input(type="text" id="inputBigSearch" placeholder="query" style="font-size:18px" value=`${query}`)
            button(id="btnBigSearch") Go
        ul#entries
            each element in movieList
                li
                    a
                        img(src=`${element.Poster}`)
                        #yearTitle
                            p= element.Year
                            h3= element.Title
                        div(class="addMovie" onclick=`addMovie('${element.imdbID}')`)
                            i(id=`i_${element.imdbID}` class="fas fa-plus")
                            p(id=`p_${element.imdbID}`) Add to list
    
    script(src="/javascripts/modules/main/searchMain.js" type="module")
    script(src="/javascripts/addMovie.js")